<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="BlueNotify.AppShell"
       xmlns:view="clr-namespace:BlueNotify.Views"
       Title="BlueNotify"
       FlyoutBackground="#454545">
    <FlyoutItem Title="Explorer">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate view:Explorer}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate view:AppSettings}" />
        </Tab>
    </FlyoutItem>
</Shell>
